<controls:MetroWindow x:Class="SkladMe.View.NoticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkladMe.View"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        ShowTitleBar="True"
        TitleCharacterCasing="Normal"
        BorderThickness="1"
        BorderBrush="#6D4A75"
        NonActiveWindowTitleBrush="#6D4A75"
        WindowTitleBrush="#6D4A75"
        ShowIconOnTitleBar="True"
        WindowTransitionsEnabled="False"
        TitlebarHeight="30"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="ImageBox"
                Source="{Binding Image}"
               Stretch="None" 
               PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown" 
               Cursor="Hand"/>
    </Grid>
</controls:MetroWindow>
