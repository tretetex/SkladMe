<controls:MetroWindow x:Class="SkladMe.MainWindow"
                      x:Name="mainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:myControls="clr-namespace:SkladMe.Controls"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:inf="clr-namespace:SkladMe.Infrastructure"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      xmlns:converters="clr-namespace:SkladMe.Resources.Converters"
                      xmlns:view="clr-namespace:SkladMe.View"
                      xmlns:viewModel="clr-namespace:SkladMe.ViewModel"
                      xmlns:properties="clr-namespace:SkladMe.Properties"
                      Height="600" Width="900"
                      MinHeight="300" MinWidth="600"
                      ResizeMode="CanResize"
                      UseLayoutRounding="True"
                      SnapsToDevicePixels="True"
                      ShowTitleBar="True"
                      BorderBrush="#6D4A75"
                      NonActiveWindowTitleBrush="#6D4A75"
                      WindowTitleBrush="#6D4A75"
                      ShowIconOnTitleBar="True"
                      WindowTransitionsEnabled="False"
                      TitlebarHeight="30"
                      WindowCloseButtonStyle="{DynamicResource CleanCloseWindowButtonStyle}"
                      Icon="Resources/Icons/loupe1.ico">
    <controls:MetroWindow.Style>
        <Style TargetType="{x:Type controls:MetroWindow}">
            <Setter Property="BorderThickness" Value="0,1,1,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding AuthorizationVM.IsSuccess}" Value="False">
                    <Setter Property="BorderThickness" Value="1" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </controls:MetroWindow.Style>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding CloseWindowCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <controls:MetroWindow.IconTemplate>
        <DataTemplate />
    </controls:MetroWindow.IconTemplate>

    <controls:MetroWindow.LeftWindowCommands>
        <controls:WindowCommands ShowSeparators="False">
            <StackPanel Orientation="Horizontal" Margin="-20,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Sklad"
                               FontFamily="Arial"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Foreground="#f2f2f2" />
                    <TextBlock Text="Me"
                               FontFamily="Arial"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,5,0,0"
                               Foreground="#e4e4e4" />
                </StackPanel>
                <Border Padding="12,0">
                    <Grid Margin="30,0,0,0">
                        <Border Background="Black" Opacity="0.2" Margin="-10,0" />
                        <TextBlock Text="{Binding ElementName=tcMain, Path=SelectedItem.Header}"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </StackPanel>

        </controls:WindowCommands>
    </controls:MetroWindow.LeftWindowCommands>
    <Window.Resources>
        <SolidColorBrush x:Key="MainPanelBrush" Color="#2a2d33" />
        <SolidColorBrush x:Key="WindowTitleBrush" Color="#6D4A75" />

        <converters:SelectedItemsConverter x:Key="SelectedItemsConverter" />
        <converters:StringToBrushConverter x:Key="StringToBrushConverter" />
        <converters:BooleanToInvisibilityConverter x:Key="BooleanToInvisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <CollectionViewSource Source="{Binding ColorManagerVM.Colors}" x:Key="Colors" />

        <Style x:Key="DefaultRowStyle" TargetType="{x:Type DataGridRow}">
            <Setter Property="ToolTip" Value="{Binding Note}" />
            <Setter Property="Background"
                    Value="{Binding Color, Converter={StaticResource StringToBrushConverter}, Mode=TwoWay}" />
            <Setter Property="BorderBrush"
                    Value="{Binding Color, Converter={StaticResource StringToBrushConverter}, Mode=TwoWay}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#e5f3ff" />
                    <Setter Property="Background" Value="#e5f3ff" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="#cde8ff" />
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsSelected" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="#99d1ff" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuItemChangeColorStyle" TargetType="{x:Type MenuItem}">
            <Setter Property="Command" Value="{Binding ChangeProductColorCommand}" />
            <Setter Property="CommandParameter"
                    Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItems}" />
        </Style>

        <DataTemplate x:Key="ColorInMenuTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0"
                           Fill="{Binding Value, Converter={StaticResource StringToBrushConverter}}"
                           Width="15" Height="15" Margin="-50,0,0,0" />
                <TextBlock Grid.Column="1" Text="{Binding Title}" Margin="-20,0,0,0" />
            </Grid>
        </DataTemplate>

        <Style TargetType="{x:Type MenuItem}" x:Key="MenuItemSetCategoriesColorSyle">
            <Setter Property="ItemContainerStyle" Value="{StaticResource MenuItemChangeColorStyle}" />
            <Setter Property="ItemTemplate" Value="{StaticResource ColorInMenuTemplate}" />
            <Setter Property="ItemsSource">
                <Setter.Value>
                    <CompositeCollection>
                        <MenuItem x:Name="MenuItemNoColor" Header="Без цвета" Margin="0,3"
                                  Command="{Binding ProductManager.ResetColorCommand}" />
                        <Separator Margin="-50,-5,-5,-3" />
                        <CollectionContainer Collection="{Binding Source={StaticResource Colors}}" />
                        <Separator Margin="-50,-5,-5,-7" />
                        <MenuItem Header="Редактировать метки" Margin="0,3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding DataContext.ColorManagerVM.EditColorsCommand, Source={x:Reference mainWindow}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </MenuItem>
                    </CompositeCollection>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type MenuItem}" x:Key="MenuItemSetResultsColorSyle">
            <Setter Property="ItemsSource">
                <Setter.Value>
                    <CompositeCollection>
                        <MenuItem x:Name="MenuItemNoColor" Header="Без цвета" Margin="0,3"
                                  Command="{Binding CategoryManagerVM.ProductManager.ResetColorCommand}" />
                        <Separator Margin="-50,-5,-5,-3" />
                        <CollectionContainer Collection="{Binding Source={StaticResource Colors}}" />
                        <Separator Margin="-50,-5,-5,-7" />
                        <MenuItem Header="Редактировать метки" Margin="0,3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ColorManagerVM.EditColorsCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </MenuItem>
                    </CompositeCollection>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle" Value="{StaticResource MenuItemChangeColorStyle}" />
            <Setter Property="ItemTemplate" Value="{StaticResource ColorInMenuTemplate}" />
        </Style>

        <Style x:Key="CleanCloseWindowButtonStyle" TargetType="{x:Type Button}"
               BasedOn="{StaticResource MetroWindowButtonStyle}">
            <Style.Triggers>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EB2F2F" />
                    <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#7C0000" />
                </Trigger>

            </Style.Triggers>
        </Style>


        <!-- base button style for min, max and close window buttons -->
        <Style x:Key="MetroBaseWindowButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background"
                    Value="{DynamicResource TransparentWhiteBrush}" />
            <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid"
                              Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              RecognizesAccessKey="True"
                                              Opacity="0.75" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="contentPresenter"
                                        Property="Opacity"
                                        Value="1" />
                                <Setter TargetName="grid"
                                        Property="Background"
                                        Value="{DynamicResource SemiTransparentWhiteBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="False">
                                <Setter TargetName="contentPresenter"
                                        Property="Opacity"
                                        Value=".5" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter Property="Foreground"
                                        Value="#ADADAD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- default button style for min, max and close window buttons -->
        <Style x:Key="MetroWindowButtonStyle"
               TargetType="{x:Type Button}"
               BasedOn="{StaticResource MetroBaseWindowButtonStyle}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="IsTabStop"
                    Value="False" />
            <Setter Property="Width"
                    Value="34" />
            <Setter Property="MaxHeight"
                    Value="34" />
            <Setter Property="Padding"
                    Value="0" />
        </Style>

        <Style x:Key="CustomLightMetroWindowButtonStyle" TargetType="{x:Type Button}"
               BasedOn="{StaticResource MetroWindowButtonStyle}">
            <Setter Property="Foreground" Value="#caccce" />
        </Style>

        <Style TargetType="{x:Type controls:WindowButtonCommands}"
               BasedOn="{StaticResource {x:Type controls:WindowButtonCommands}}">
            <Setter Property="LightMinButtonStyle" Value="{StaticResource CustomLightMetroWindowButtonStyle}" />
            <Setter Property="LightMaxButtonStyle" Value="{StaticResource CustomLightMetroWindowButtonStyle}" />
            <Setter Property="LightCloseButtonStyle" Value="{StaticResource CustomLightMetroWindowButtonStyle}" />
        </Style>

        <DataTemplate x:Key="CategoryTemplate" DataType="{x:Type viewModel:CategoryVM}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Панель -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!-- Кнопки -->
                    <StackPanel Grid.Row="0" Margin="5" Orientation="Horizontal">
                        <Button Content="Обновить"
                                Command="{Binding ProductManager.RefreshCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource PanelButtonStyle}">
                                    <Setter Property="Tag"
                                            Value="/Resources/Icons/panels/Обновить.png" />
                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding ProductManager.IsRefreshing}"
                                            Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Обновить (стоп).png" />
                                        </DataTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Обновить [disabled].png" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Обновить [hover].png" />
                                        </Trigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ProductManager.IsRefreshing}" Value="True" />
                                                <Condition
                                                    Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}, Path=IsMouseOver}"
                                                    Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Обновить (стоп) [hover].png" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Экспорт"
                                Command="{Binding ProductManager.ExportCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource PanelButtonStyle}">
                                    <Setter Property="Tag"
                                            Value="/Resources/Icons/panels/Экспорт.png" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Экспорт [disabled].png" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Экспорт [hover].png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Separator
                                Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                                Background="#e4e4e4" />
                        </StackPanel>
                        <Button Content="Фильтр"
                                Command="{Binding ShowFiltersCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource PanelButtonStyle}">
                                    <Setter Property="Tag"
                                            Value="/Resources/Icons/panels/Фильтр.png" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Фильтр [disabled].png" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Фильтр [hover].png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Сброс"
                                Command="{Binding ResetFiltersCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource PanelButtonStyle}">
                                    <Setter Property="Tag"
                                            Value="/Resources/Icons/panels/Фильтр (сброс).png" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Фильтр (сброс) [disabled].png" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Фильтр (сброс) [hover].png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Separator
                                Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                                Background="#e4e4e4" />
                        </StackPanel>
                        <Button Content="в категорию"
                                Name="Добавить"
                                DataContext="{Binding ElementName=mainWindow, Path=DataContext}"
                                Command="{Binding CategoryManagerVM.AddProductToCategoryCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource TwoLinePanelButton}">
                                    <Setter Property="Tag"
                                            Value="/Resources/Icons/panels/Добавить в категорию.png" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Добавить в категорию [disabled].png" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Добавить в категорию [hover].png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="складчину"
                                Name="Добaвить"
                                DataContext="{Binding ElementName=mainWindow, Path=DataContext}"
                                Command="{Binding CategoryManagerVM.AddProductFromUrlCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}"
                                       BasedOn="{StaticResource TwoLinePanelButton}">
                                    <Setter Property="Tag"
                                            Value="/Resources/Icons/panels/Добавить складчину.png" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Добавить складчину [disabled].png" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Tag"
                                                    Value="/Resources/Icons/panels/Добавить складчину [hover].png" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                            <Separator
                                Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"
                                Background="#e4e4e4" />
                        </StackPanel>

                    </StackPanel>
                    <!-- /Кнопки -->
                    <!-- Счетчики -->

                    <StackPanel Orientation="Horizontal"
                                Grid.Column="1"
                                Margin="0,5,15,5"
                                HorizontalAlignment="Right"
                                DataContext="{Binding ProductManager}">


                        <TextBlock
                            Text="{Binding (inf:AnimatableDoubleHelper.AnimatedProperty), RelativeSource={RelativeSource Self},
                                            StringFormat=0}"
                            inf:AnimatableDoubleHelper.OriginalProperty="{Binding ProductsCount}"
                            FontSize="20"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,10,15,10" />

                        <Grid Grid.Column="1" Margin="0,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Открыто"
                                           Foreground="#a1a1a1" FontSize="11" FontFamily="Roboto" />
                                <TextBlock Grid.Column="1" Text="{Binding OpenProductsCount}" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Активно" Foreground="#a1a1a1" FontSize="11"
                                           FontFamily="Roboto" />
                                <TextBlock Grid.Column="1" Text="{Binding ActiveProductsCount}" />
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Закрыто" Foreground="#a1a1a1" FontSize="11"
                                           FontFamily="Roboto" />
                                <TextBlock Grid.Column="1" Text="{Binding ClosedProductsCount}" />
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Доступно" Foreground="#a1a1a1" FontSize="11"
                                           FontFamily="Roboto" />
                                <TextBlock Grid.Column="1" Text="{Binding AvailableProductsCount}" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                    <!-- /Счетчики -->
                </Grid>
                <!-- /Панель -->

                <Border Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <myControls:ProductsDataGrid
                            x:Name="dgCategory"
                            ColumnsSizeCollection="{Binding ElementName=mainWindow, Path=DataContext.ColumnInfo}"
                            Grid.Row="0"
                            DataContext="{Binding}"
                            ItemsSource="{Binding Products}"
                            RowStyle="{StaticResource DefaultRowStyle}">
                            
                            <myControls:ProductsDataGrid.SelectedItems>
                                <MultiBinding Converter="{StaticResource SelectedItemsConverter}">
                                    <Binding Path="ProductManager.SelectedProducts"
                                             Mode="OneWayToSource" />
                                    <Binding Path="DataContext.CategoryManagerVM.ProductManager.SelectedProducts"
                                             Mode="OneWayToSource"
                                             ElementName="mainWindow" />
                                </MultiBinding>
                            </myControls:ProductsDataGrid.SelectedItems>
                            <myControls:ProductsDataGrid.GridContextMenu>
                                <ContextMenu Tag="results">
                                    <MenuItem Header="Открыть в браузере"
                                              Command="{Binding ProductManager.OpenProductsCommand}" />
                                    <MenuItem Header="Копировать ссылку"
                                              Command="{Binding ProductManager.CopyLinksCommand}" />
                                    <MenuItem Header="Сохранить"
                                              Command="{Binding ProductManager.SaveProductsCommand}" />
                                    <MenuItem Header="Обновить"
                                              Command="{Binding ProductManager.RefreshSelectedProductsCommand}" />
                                    <MenuItem Header="Удалить"
                                              Command="{Binding RemoveProductsCommand}" />
                                    <MenuItem Header="Цвет"
                                              Style="{StaticResource MenuItemSetCategoriesColorSyle}" />
                                </ContextMenu>
                            </myControls:ProductsDataGrid.GridContextMenu>
                            <myControls:ProductsDataGrid.InputBindings>
                                <KeyBinding Key="Enter"
                                            Command="{Binding ProductManager.OpenProductsCommand}" />
                                <KeyBinding Key="Delete"
                                            Command="{Binding RemoveProductsCommand}" />
                                <KeyBinding Key="C" Modifiers="Control"
                                            Command="{Binding ProductManager.CopyLinksCommand}" />
                                <MouseBinding Gesture="LeftDoubleClick"
                                              Command="{Binding ProductManager.OpenProductsCommand}" />
                            </myControls:ProductsDataGrid.InputBindings>

                        </myControls:ProductsDataGrid>
                        <Border Grid.Row="0"
                                Background="White">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Visibility"
                                            Value="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Style>
                            </Border.Style>
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Загрузка..."
                                VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                </Border>

                <view:CancellationPopup Grid.Row="0"
                                        Grid.RowSpan="2"
                                        DataContext="{Binding ProductManager}">
                    <view:CancellationPopup.Style>
                        <Style TargetType="{x:Type view:CancellationPopup}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                    <Setter Property="Status" Value="ОБНОВЛЕНИЕ..." />
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsExporting}" Value="True">
                                    <Setter Property="Status" Value="СОХРАНЕНИЕ..." />
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </view:CancellationPopup.Style>
                </view:CancellationPopup>
            </Grid>
        </DataTemplate>

        <!--Поиск-->
        <DataTemplate x:Key="SearchTemplate">
            <Grid DataContext="{Binding ElementName=mainWindow, Path=DataContext}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                            <Button Command="{Binding SearchVM.StartCommand}">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}"
                                           BasedOn="{StaticResource PanelButtonStyle}">
                                        <Setter Property="Content" Value="Искать" />
                                        <Setter Property="Tag"
                                                Value="/Resources/Icons/panels/Искать.png" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchVM.IsStarted}" Value="True">
                                                <Setter Property="Content" Value="Прервать" />
                                                <Setter Property="Tag"
                                                        Value="/Resources/Icons/panels/Искать (стоп).png" />
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SearchVM.IsStarted}" Value="True" />
                                                    <Condition
                                                        Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}"
                                                        Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Tag"
                                                        Value="/Resources/Icons/panels/Искать (стоп) [hover].png" />
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
